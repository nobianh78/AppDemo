<WelcomeScreen>:
    name: "welcome"

    FloatLayout:
        md_bg_color: 0, 0, 0, 1  # Màu nền trắng
        Image:
            source: "anh/logo.png"
            pos_hint: {"center_x": .5, "center_y": .74}
            keep_ratio: True  # Giữ nguyên tỉ lệ ảnh
            size_hint: None, None  # Không dùng tỷ lệ tự động
            width: min(root.width, root.height) * 0.3  # Điều chỉnh theo kích thước nhỏ hơn
            height: self.width * (self.image_ratio)  # Duy trì tỉ lệ gốc

        Label:
            id: welcome_text  # Thêm ID này
            text: "Chào Mừng ! "
            font_name: "font/Lobster-Regular"
            font_size: "23sp"
            pos_hint: {"center_x": .5, "center_y": .63}
            halign: "center"
            width: min(root.width, root.height) * 4
            color: rgba(34, 34, 34, 255)

        Label:
            id: subtitle_text  # Thêm ID này
            text: "Hãy bắt đầu hành trình cùng chúng tôi"
            font_name: "font/Roboto"
            font_size: "13sp"
            pos_hint: {"center_x": .5, "center_y": .57}
            halign: "center"
            width: min(root.width, root.height) * 4
            color: rgba(127, 127, 127, 255)

        Button:
            id: login_button
            text: "Đăng Nhập"
            size_hint: .66, .065
            font_name: "font/Roboto"
            pos_hint: {"center_x": 0.5, "top": 0.4}
            background_color: 0.5, 0.4, 0.7, 1  # Tím đậm
            background_normal: ""
            color: 1, 1, 1, 1  # Trắng
            border_radius: [20, 20, 20, 20]  # Góc bo tròn
            on_release:
                app.root.transition.direction = "left"
                app.root.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 225)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            id: signup_button
            text: "Đăng Ký"
            size_hint: .66, .065
            font_name: "font/Roboto"
            pos_hint: {"center_x": 0.5, "top": 0.3}
            background_color: 0, 0, 0, 0  # Tím đậm
            background_normal: ""
            color: 0.5, 0.4, 0.7, 1
            border_radius: [20, 20, 20, 20]  # Góc bo tròn
            on_release:
                app.root.transition.direction = "right"
                app.root.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(0.3, 0, 0.5, 1)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100

        Button:
            id: language_button
            text: "English"
            size_hint: .66, .065
            font_name: "font/Roboto"
            pos_hint: {"center_x": 0.5, "center_y": .2}
            background_color: 0, 0, 0, 0
            background_normal: ""
            color: 0.5, 0.4, 0.7, 1
            border_radius: [20, 20, 20, 20]  # Góc bo tròn
            on_release: root.toggle_language()

