<HomeScreen>:
    id: home_screen
    name: "home"

    BoxLayout:
        orientation: "vertical"

        ScreenManager:
            id: main_screen_manager  # Giữ các màn hình con mà không làm mất thanh điều hướng

            Screen:
                name: "home_content"
                MDLabel:
                    text: "Nội dung trang Home"
                    halign: "center"

            Screen:
                name: "profile_content"
                MDLabel:
                    text: "Nội dung trang Cá Nhân"
                    halign: "center"

            Screen:
                name: "messages_content"
                MDLabel:
                    text: "Nội dung trang Tin Nhắn"
                    halign: "center"

            Screen:
                name: "friends_content"
                MDLabel:
                    text: "Nội dung trang Bạn Bè"
                    halign: "center"


        MDBottomNavigation:
            id: bottom_navigation
            panel_color: 1, 1, 1, 1

            MDBottomNavigationItem:
                id: home_tab
                name: "home"
                text: "Trang chủ"
                icon: "home"
                on_tab_release: root.ids.main_screen_manager.current = "home_content"
                text_color_active: 186/255, 154/255, 219/255, 1
            MDBottomNavigationItem:
                id: profile_tab
                name: "profile"
                text: "Cá nhân"
                icon: "account"
                on_tab_release: root.ids.main_screen_manager.current = "profile_content"
                text_color_active: 186/255, 154/255, 219/255, 1
            MDBottomNavigationItem:
                id: messages_tab
                name: "messages"
                text: "Tin nhắn"
                icon: "message"
                on_tab_release: root.ids.main_screen_manager.current = "messages_content"
                text_color_active: 186/255, 154/255, 219/255, 1
            MDBottomNavigationItem:
                id: friends_tab
                name: "friends"
                text: "Bạn bè"
                icon: "account-group"
                on_tab_release: root.ids.main_screen_manager.current = "friends_content"
                text_color_active: 186/255, 154/255, 219/255, 1